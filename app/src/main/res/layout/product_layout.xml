<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context=".ProductProfilController">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:background="@drawable/background2">


        <TextView
            android:id="@+id/image_name"
            android:layout_width="124sp"
            android:layout_height="124sp"
            android:layout_margin="3dp"
            android:background="@drawable/image_background"
            android:gravity="center"
            android:layout_gravity="center"
            android:padding="3dp"
            android:textColor="@color/colorWhiteBackGround"
            android:text="image de produit"
            android:textSize="16sp"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Laptop ASUS K555L"
            android:textSize="24dp"
            android:layout_margin="5sp"
            android:textStyle="normal"
            android:textColor="@color/colorGrey"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/product_coast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="85000.00 DA"
            android:textSize="24dp"
            android:textStyle="normal"
            android:textColor="@color/colorAccent"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="SonicMaster Qualité audio puissante et limpide. IceCool Garde les repose-poignets au frais. Autonomie prolongée. Memory  8GB HDD 1 TB OS Free DOS CPU Intel Core i7-5500U, up to 3.0GHz ODD DVD Sup.MTL"
            android:layout_margin="25sp"
            android:lineSpacingExtra="2sp"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textColor="@color/colorGrey"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGreyTransparent"
            android:orientation="vertical"/>


        <android.support.v7.widget.CardView
            android:id="@+id/post1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/colorWhiteBackGround"
            android:foreground="?attr/selectableItemBackground"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:elevation="3dp">


            <!-- Card view container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Second container -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:layout_gravity="top|right">

                        <ImageView
                            android:id="@+id/post_control"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:rotation="90"
                            android:focusable="true"
                            android:src="@drawable/ic_more_ver_24dp"/>

                    </LinearLayout>

                    <!-- Name and Picture container -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/market_image"
                                android:layout_width="52sp"
                                android:layout_height="52sp"
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:background="@drawable/image_background"
                                android:gravity="center"
                                android:padding="3dp"
                                android:text="BIA"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                android:textColor="@color/colorWhiteBackGround"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/market_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:text="Amokrane d'Informatique"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="@color/colorGrey"
                                android:textSize="18dp"
                                android:textStyle="bold" />


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="5dp"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/star1"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/ic_star_24dp" />

                                    <ImageView
                                        android:id="@+id/star2"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/ic_star_24dp" />

                                    <ImageView
                                        android:id="@+id/star3"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/ic_star_half_24dp" />

                                    <ImageView
                                        android:id="@+id/star4"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/ic_star_border_24dp" />

                                    <ImageView
                                        android:id="@+id/star5"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:src="@drawable/ic_star_border_24dp" />

                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/region"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Rue Didouche Mourad N°15"
                                    android:textColor="@color/colorGrey"
                                    android:textSize="14dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text=" • "
                                    android:textColor="@color/colorGrey"
                                    android:textSize="14dp" />

                                <TextView
                                    android:id="@+id/wilaya"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="Alger"
                                    android:textColor="@color/colorGrey"
                                    android:textSize="14dp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/type_market"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingBottom="5dp"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"
                                android:text="Boutique informatique"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                android:textColor="@color/colorGrey"
                                android:textSize="14dp" />


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="10dp"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/commander_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:drawableLeft="@drawable/ic_add_shopping_cart_24dp"
                                    android:drawablePadding="5dp"
                                    android:focusable="true"
                                    android:text="Commander"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/consulter_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:clickable="true"
                                    android:drawableLeft="@drawable/ic_home_accent_24dp"
                                    android:drawablePadding="5dp"
                                    android:focusable="true"
                                    android:text="Consulter"
                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                                    android:textColor="@color/colorAccent"
                                    android:textSize="16dp"
                                    android:textStyle="bold" />


                            </LinearLayout>


                        </LinearLayout>


                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2px"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGreyTransparent"
            android:orientation="vertical"/>




    </LinearLayout>

</android.support.v4.widget.NestedScrollView>